
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

GET     /loginform                  @controllers.LoginFormController.loginForm
POST    /dologinform                @controllers.LoginFormController.doLogin
POST     /callback                   @org.pac4j.play.CallbackController.callback(request:Request)
GET     /logout                     @org.pac4j.play.LogoutController.logout(request:Request)

GET     /api/profile                @controllers.ApiProfileController.myProfile

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /                           @controllers.HomeController.index
GET     /*tail                      @controllers.HomeController.indexWithTail(tail)